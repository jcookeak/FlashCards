<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.jcookeakindiana.flashcards.ModifyCategoryActivity"
    tools:showIn="@layout/activity_create_category">

    <!--scrollview to accommodate large list of fields-->

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/create_category_scrollview">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/create_category_fields_list">

            <!--label for category name-->
            <TextView
                android:text="@string/category_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category_title_label"/>

            <!--category name input-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_name_input"
                android:ems="10"
                android:textSize="30sp"
                android:id="@+id/category_title"
                android:inputType="textCapWords" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/create_category_fields_listview">

            </ListView>

        </LinearLayout>

    <!--</ScrollView>-->

</LinearLayout>
